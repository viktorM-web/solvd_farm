<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.farm.persistence.FarmRepository">

    <insert id="save" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        Insert into farms (name, budget, user_id) values (#{name}, #{budget}, #{user.id})
    </insert>

    <sql id="farmSelect">
        Select
        farms.id id,
        farms.name name,
        farms.budget budget,
        users.id users_id,
        users.login users_login,
        users.password users_password,
        users.role users_role
        from farms
        join users on users.id=farms.user_id
    </sql>

    <select id="findById" resultMap="FarmResultMap">
        <include refid="farmSelect"/>
        where farms.id=#{id}
    </select>

    <select id="findAll" resultMap="FarmResultMap">
        <include refid="farmSelect"/>
    </select>

    <update id="update">
        Update farms set name = #{name}, budget = #{budget}, user_id = #{user.id} WHERE id=#{id}
    </update>

    <delete id="delete">
        Delete from farms where id=#{id}
    </delete>

    <resultMap id="FarmResultMap" type="com.solvd.farm.domain.Farm" autoMapping="false">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="budget" property="budget"/>
        <association property="user" columnPrefix="USERS_" javaType="com.solvd.farm.domain.User"
                     resultMap="UserResultMap"/>
    </resultMap>
    <resultMap id="UserResultMap" type="com.solvd.farm.domain.User" autoMapping="false">
        <id column="id" property="id"/>
        <result column="login" property="login"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
    </resultMap>
</mapper>