<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.farm.persistence.UserRepository">

    <insert id="save" keyColumn="GENERATED_KEY" keyProperty="id" useGeneratedKeys="true">
        Insert into users (login, password, role) values (#{login}, #{password}, #{role})
    </insert>

    <sql id="userSelect">
        Select id, login, password, role from users
    </sql>

    <select id="findById" resultMap="UserResultMap">
        <include refid="userSelect"/>
        where id=#{id}
    </select>

    <select id="findAll" resultMap="UserResultMap">
        <include refid="userSelect"/>
    </select>

    <select id="findBy" resultMap="UserResultMap">
        <include refid="userSelect"/>
        where login=#{login} and password=#{password}
    </select>

    <update id="update">
        Update users set login = #{login}, password = #{password}, role = #{role} WHERE id=#{id}
    </update>

    <delete id="delete">
        Delete from users where id=#{id}
    </delete>

    <resultMap id="UserResultMap" type="com.solvd.farm.domain.User" autoMapping="false">
        <id column="id" property="id"/>
        <result column="login" property="login"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
    </resultMap>
</mapper>